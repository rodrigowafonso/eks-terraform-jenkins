pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION = credentials('AWS_REGION')
        TF_CLUSTER_NAME = ""
    }

    stages {

        stage('Checkout CÃ³digo Github SCM') {
            steps {
                script {
                    checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/rodrigowafonso/eks-terraform-jenkins.git']])
                }
            }
        }

        stage('Inicializando o Terraform') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Format e Validate') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform fmt'
                        sh 'terraform validate'
                    }
                }
            }

        }

        stage('Provisionando a Infraestrutura') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform plan'
                    }
                    input(message: "Approve?", ok: "proceed")

                }
            }
        }

        stage('Create/Destroy Cluster EKS') {
            steps {
                script {
                    dir('terraform') {
                        sh 'terraform $action --auto-approve'
                    }
                }
            }

        }

        stage('Coletando o nome de Cluster') {
            steps {
                script {
                    def outputs_tf = sh(script: 'terraform output -raw aws-eks-cluster-name', returnStdout: true).trim()
                    env.TF_CLUSTER_NAME = outputs_tf
                    echo "Cluster Name: ${env.TF_CLUSTER_NAME}"
                }
            }

        }

        stage('Configurando o Kubectl Config') {
            steps {
                script {
                    sh 'echo aws eks update-kubeconfig --region "${AWS_DEFAULT_REGION}" --name "${env.TF_CLUSTER_NAME}"'
                    sh 'aws eks update-kubeconfig --region "${AWS_DEFAULT_REGION}" --name "${env.TF_CLUSTER_NAME}"'
                }
            }
        }

        stage('Deploy dos Manifestos no Kubernetes') {
            steps {
                script {
                    sh 'kubectl apply -f ./manifests/deployment.yml'
                    sh 'kubectl apply -f ./manifests/service.yml'
                    sh 'kubectl get pods'
                    sh 'kubectl get services'
                }
            }

        }

    }
}